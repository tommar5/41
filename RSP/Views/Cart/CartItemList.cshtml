
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<h2>Cart item list page</h2>
<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
        <tr>
            <th style="width:50%">Product</th>
            <th style="width:10%">Price</th>
            <th style="width:8%">Quantity</th>
            <th style="width:22%" class="text-center">Subtotal</th>
            <th style="width:10%"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in ViewData["CartItemList"] as IEnumerable<RSP.Dtos.CartItemDto>)
        {
            <tr>
                <td data-th="Product">
                    <div class="row">
                        <div class="col-sm-2 hidden-xs"><img src="http://placehold.it/100x100" alt="..." class="img-responsive"/>
                        </div>
                        <div class="col-sm-10">
                            <a href="@Url.Action("ItemDetails", "Item", new { id = @item.Item.Id })"><h4 class="nomargin">@item.Item.Name</h4></a>
                            <p>@item.Item.Description.</p>
                        </div>
                    </div>
                </td>
                <td data-th="Price">@item.Item.Price</td>
                <td data-th="Quantity" class="text-center">@item.Number</td>
                <td data-th="Subtotal" class="text-center">@(item.Item.Price * @item.Number)</td>
                <td class="actions" data-th="">
                    <a href="@Url.Action("Delete", "Cart", new { id = @item.Id })" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></a>
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr class="visible-xs">
            <td class="text-center"><strong>Total @ViewData["Subtotal"]</strong></td>
        </tr>
        <tr>
            <td><a href="@Url.Action("ItemList", "Item")" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
            <td colspan="2" class="hidden-xs"></td>
            <td class="hidden-xs text-center"><strong>Total $@ViewData["Subtotal"]</strong></td>
            <td><a href="#" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>
        </tr>
        </tfoot>
    </table>
</div>