<h2>Item list page</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                @foreach (var item in ViewData["ItemList"] as IEnumerable<RSP.Dtos.ItemDto>)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="@Url.Action("ItemDetails", "Item", new { id = @item.Id })">@item.Name</a>
                                </h4>
                                <h5>$@item.Price</h5>
                                <p class="card-text">@item.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
